{
	"name": "@chainfuse/helpers",
	"version": "3.5.4",
	"description": "",
	"author": "ChainFuse",
	"homepage": "https://github.com/ChainFuse/packages/tree/main/packages/helpers#readme",
	"license": "Apache-2.0",
	"main": "./dist/index.mjs",
	"directories": {
		"lib": "dist",
		"test": "__tests__"
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public",
		"provenance": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ChainFuse/packages.git"
	},
	"scripts": {
		"fmt": "prettier --check .",
		"fmt:fix": "prettier --write .",
		"lint": "eslint src",
		"lint:fix": "npm run lint -- --fix",
		"clean": "npx -y rimraf@latest ./dist ./.tsbuildinfo",
		"build": "tsc",
		"build:clean": "npm run build -- --build --clean && npm run build",
		"pretest": "tsc --project tsconfig.tests.json",
		"test": "node --enable-source-maps --test --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout"
	},
	"type": "module",
	"bugs": {
		"url": "https://github.com/ChainFuse/packages/issues"
	},
	"types": "./dist/index.d.mts",
	"engines": {
		"node": ">=20.16.0"
	},
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.mts"
		},
		"./buffers": {
			"import": "./dist/buffers.mjs",
			"types": "./dist/buffers.d.mts"
		},
		"./common": {
			"import": "./dist/common.mjs",
			"types": "./dist/common.d.mts"
		},
		"./crypto": {
			"import": "./dist/crypto.mjs",
			"types": "./dist/crypto.d.mts"
		},
		"./db": {
			"import": "./dist/db.mjs",
			"types": "./dist/db.d.mts"
		},
		"./discord": {
			"import": "./dist/discord.mjs",
			"types": "./dist/discord.d.mts"
		},
		"./dns": {
			"import": "./dist/dns.mjs",
			"types": "./dist/dns.d.mts"
		},
		"./net": {
			"import": "./dist/net.mjs",
			"types": "./dist/net.d.mts"
		}
	},
	"prettier": "@demosjarco/prettier-config",
	"dependencies": {
		"@chainfuse/types": "^2.11.7",
		"@discordjs/rest": "^2.6.0",
		"chalk": "^5.6.0",
		"cloudflare": "^4.5.0",
		"drizzle-orm": "^0.44.5",
		"strip-ansi": "^7.1.0",
		"uuid": "^11.1.0",
		"zod": "^4.1.3"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250903.0",
		"@types/node": "^22.18.0"
	}
}
